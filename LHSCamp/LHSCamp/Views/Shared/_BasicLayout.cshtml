<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Scripts.Render("~/bundles/jquery")
    @Styles.Render("~/Content/Fonts/Quickly/Quickly-font.css")
    @Styles.Render("~/Content/Fonts/Railway/Railway-font.css")
    @*@Styles.Render("~/Content/Styles/Site/shared.less")*@
    @Styles.Render("~/Content/Styles/Site/Layout/header.less")
    @Styles.Render("~/Content/Styles/Site/Layout/footer.less")
    @RenderSection("Styles", false)
    <script type="text/javascript" src="~/Content/Scripts/Site/Home/picker.js"></script>
</head>
<body>
    <div id="header">
        <div id="header-cont">
            <span class="large-font link" data-href="~/Home"><b>lhs</b>|campaign</span>
            <ul id="header-nav">
                <li>@User.Identity.Name</li>
                <li><a class="nunderline" href="~/Account/Manage">settings</a></li>
                <li style="border-right:0px;"><a class="nunderline" href="~/Account/LogOff">logout</a></li>
            </ul>
        </div>
    </div>
    <div id="content">
        @RenderBody()
    </div>
    <div id="footer">
        <div id="footer-cont">
            @RenderSection("Footer", false)
        </div>
    </div>
    @RenderSection("Scripts", false)
    <script type="text/javascript">
        $(".link").click(function () {
            window.location.href = $(this).attr("data-href");
        });
    </script>
</body>
</html>
